build --incompatible_enable_cc_toolchain_resolution
build --extra_toolchains=//:arm_none_eabi_toolchain

# Verbose output for debugging (comment out for normal builds)

# Show detailed failure messages
build --verbose_failures

# CI configuration with caching for faster builds
build:ci --repository_cache=$HOME/.cache/bazel-rep
build:ci --disk_cache=$HOME/.cache/bazel-disk       